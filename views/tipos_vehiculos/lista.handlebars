<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h2 class="mb-0">Tipos de Vehículos</h2>
            <a href="/tipos-vehiculos/crear" class="btn btn-primary">
                <i class="bi bi-plus-circle me-1"></i>
                Nuevo Tipo de Vehículo
            </a>
        </div>
    </div>
    <div class="card-body">
        <form method="GET" action="/tipos-vehiculos" class="mb-4">
            <div class="row">
                <div class="col-md-4">
                    <select name="estado" class="form-select" onchange="this.form.submit()">
                        <option value="">Todos los estados</option>
                        <option value="1" {{#if (eq estado "1")}}selected{{/if}}>Activos</option>
                        <option value="0" {{#if (eq estado "0")}}selected{{/if}}>Inactivos</option>
                    </select>
                </div>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Tarifa por Minuto</th>
                        <th>Tarifa plena</th>
                        <th>Tarifa 24 Horas</th>
                        <th>Tarifa Mensual</th>
                        <th>IVA (%)</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each tipos}}
                    <tr>
                        <td>{{nombre}}</td>
                        <td>{{descripcion}}</td>
                        <td>${{tarifa_minuto}}</td>
                        <td>${{tarifa_plena}}</td>
                        <td>${{tarifa_24_horas}}</td>
                        <td>${{tarifa_mensual}}</td>
                        <td>{{porcentaje_iva}}%</td>
                        <td>
                            <span class="badge {{#if (eq estado 1)}}bg-success{{else}}bg-danger{{/if}}">
                                {{#if (eq estado 1)}}Activo{{else}}Inactivo{{/if}}
                            </span>
                        </td>
                        <td>
                            <a href="/tipos-vehiculos/editar/{{id}}" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a href="/tipos-vehiculos/ver/{{id}}" class="btn btn-sm btn-info">
                                <i class="bi bi-eye"></i>
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div> 